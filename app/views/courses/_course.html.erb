<div class="course-item left bg-white p2 mb1 clearfix">
  <div class="mb1">
    <a href="<%= course_show_path(course, from: 'free') %>">
      <img src="<%= course.img_url %>?imageView2/1/w/253/h/151" width="253" height="151">
    </a>
  </div>
  <div>
    <a href="<%= course_show_path(course, from: 'free') %>" class="h4"><%= course.title %></a>
    <div class="gray h5 mt1">
      <div>讲师: <%= course.teacher.nil? ? '' : course.teacher.name %></div>
      <div>开课时间：<%= course.start_time.to_formatted_s(:date_and_time)%></div>
    </div>
  </div>
  <% if course.start_time > DateTime.now %>
    <div class="coming-soon">即将开始</div>
  <% end -%>
</div>