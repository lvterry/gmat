<div class="bg-snow pb2">

  <div class="container header-margin pt2">
    <div class="clearfix card filters">
      <span class="gray mr2">选择科目</span>
      <a href="/courses" class="<%= (@subject == "" || @subject.nil?) ? "active" : "" %>">全部</a>
      <% Course.subjects.each_with_index do |subject, index| %>
      <a href="<%= courses_subject_url(index) %>" class="<%= (index.to_s == @subject) ? 'active' : '' %>"><%= subject %></a>
      <% end -%>
    </div>
  </div>

  <div class="courses clearfix mb2">
    <div class="container">
      <% if @courses.count > 0 %>
        <% @courses.each do |course| %>
          <%= render partial: 'courses/course', locals: {course: course, auth: false, from: nil} %>
        <% end -%>
        
      <% else %>
        <div class="gray p4 center h3">没有课程</div>
      <% end -%>
    </div>
  </div>

</div>