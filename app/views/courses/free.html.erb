<div class="bg-snow">

    <div class="header-margin pb2">
        <div class="container-narrow clearfix">
            <%= link_to '即将开始', free_courses_path, class: link_class(!@archive) %>
            <%= link_to '在线回顾', free_courses_archive_path, class: link_class(@archive) %>
        </div>
    </div>


    <div class="container-narrow">
        <div class="clearfix card right-align filters">
          <a href="<%= @archive ? '/courses/free/archive' : '/courses/free' %>" class="<%= (@subject == "" || @subject.nil?) ? "active" : "" %>">全部</a>
          <% Course.subjects.each_with_index do |subject, index| %>
          <a href="<%= free_courses_subject_url(index, @archive) %>" class="<%= (index.to_s == @subject) ? 'active' : '' %>"><%= subject %></a>
          <% end -%>
      </div>
  </div>

  <div class="courses">
    <div class="clearfix max-width-3 mx-auto pb4">
      <% @courses.each do |course| %>
      <div class="course-item bg-white p2 mb1 clearfix">
        <div class="left">
            <a href="<%= course_show_path(course, from: 'free') %>">
                <img src="<%= course.img_url %>?imageView2/1/w/240/h/145" width="240" height="145">
            </a>
        </div>
        <div class="left pl3" style="width:59%">
            <a href="<%= course_show_path(course, from: 'free') %>" class="h3 black"><%= course.title %></a>
            <div class="gray h5 mt1">
                <div>讲师: <%= course.teacher.name %></div>
                <div>开课时间：<%= course.start_time.to_formatted_s(:date_and_time)%></div>
            </div>
            <div class="mt2">
                <a href="<%= course_show_path(course, from: 'free') %>" class="btn btn-primary">查看详情</a>
            </div>
        </div>
        <div class="right">
          <%= image_tag "#{course.subject_name}.png", width: 55, height: 37 %>
      </div>
  </div>
  <% end -%>
</div>
</div>

</div>