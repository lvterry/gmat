<%= form_for [:admin, @teacher], html: { class: 'form-horizontal post-form' } do |f| %>
<div class="form-group">
  <label for="name" class="col-sm-2 control-label">姓名</label>
  <div class="col-sm-10">
    <%= f.text_field :name, class: 'form-control' %>
    <p class="text-muted"><small>在创建课程的下拉列表中展示</small></p>
  </div>
</div>

<div class="form-group">
  <label for="long_name" class="col-sm-2 control-label">长名字</label>
  <div class="col-sm-10">
    <%= f.text_field :long_name, class: 'form-control' %>
    <p class="text-muted"><small>在 关于我们&gt;团队成员 中展示</small></p>
  </div>
</div>

<div class="form-group">
  <label for="description" class="col-sm-2 control-label">
    简介
  </label>
  <div class="col-sm-10">
    <%= f.text_area :description, class: 'form-control' %>
  </div>
</div>

<%= f.hidden_field :avatar %>

<div class="form-group">
  <label class="col-sm-2 control-label">头像</label>
  <div class="col-sm-10">
    <div class="padding-top: 7px;">
      <div id="avatar_container">
        <% if @teacher.avatar %>
        <img src="<%= @teacher.avatar %>?imageView2/1/w/120/h/120" height="60" width="60">
        <% end -%>
      </div>
      <div class="hidden">
        <span class="filename"></span>
        <%= image_tag 'loading.gif', width: 20, height: 20 %>
      </div>
      <div id="qiniu_container">
        <button id="qiniu_upload" class="btn btn-default">选择文件</button>
        <span class="text-muted"><small>只能上传一个头像，新上传的覆盖之前上传的</small></span>
      </div>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-10 col-sm-offset-2">
    <%= f.submit '保存', class: 'btn btn-primary' %>
  </div>
</div>

<% content_for :scripts do %>
  <%= javascript_include_tag 'admin/teachers' %>
<% end -%>

<% end %>