<h4>题库管理</h4>
<a href="<%= new_admin_exercise_path %>" class="btn btn-primary pull-right" style="margin-top: -45px;">添加题目</a>
<table class="table table-bordered">
  <thead>
    <th style="width: 600px;">题目</th>
    <th>题型</th>
    <th>难度</th>
    <th>来源</th>
    <th>操作</th>
  </thead>
  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= raw(exercise.title).truncate(180) %></td>
        <td><%= exercise.subject.join(', ') %></td>
        <td><%= exercise.difficulty.join(', ') %></td>
        <td><%= exercise.book.join(', ') %></td>
        <td>
          <%= link_to '编辑', edit_admin_exercise_path(exercise) %>
          <%= link_to '删除', admin_exercise_path(exercise), class: 'delete-exercise' %>
        </td>
      </tr>
    <% end -%>
  </tbody>
</table>

<% content_for :scripts do %>
  <%= javascript_include_tag 'admin/exercises' %>
<% end -%>