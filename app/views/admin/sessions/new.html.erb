<div class="admin-narrow-container">

  <%= form_for(:session, url: admin_login_path, html: { class: 'login-form' }) do |f| %>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="input-row" style="color:red"><%= flash[:danger] %></div>
        <div class="input-row"><%= f.text_field :name, class: 'form-control', placeholder: '登录名' %></div>
        <div class="input-row"><%= f.password_field :password, class: 'form-control', placeholder: '密码' %></div>
        <div class="input-row"><%= f.submit "登录", class: "btn btn-primary", style: 'width: 100%' %></div>
      </div>
    </div>
  <% end -%>

</div>

<p class="text-muted text-center">如果你没有账号，请联系管理员</p>

