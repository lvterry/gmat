<%= form_for(:session, url: admin_login_path) do |f| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Log in", class: "btn btn-primary" %>

    </div>
  </div>
<% end -%>