<%= link_to '回到列表', admin_admin_users_path, style: 'float:right; margin-top: -45px; margin-right: 24px;' %>
<%= form_for [:admin, @admin_user], html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">用户名<span class="required">*</span></label>
    <div class="col-sm-4">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label for="password" class="col-sm-2 control-label">密码<span class="required">*</span></label>
    <div class="col-sm-4">
      <%= f.password_field :password, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label for="password_confirmation" class="col-sm-2 control-label">重复密码<span class="required">*</span></label>
    <div class="col-sm-4">
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <%= f.submit '保存', class: 'btn btn-primary' %>
    </div>
  </div>

<% end %>