<div class="modal fade" tabindex="-1" role="dialog" id="tagModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">添加标签</h4>
      </div>
      <%= form_for [:admin, @tag], html: { class: 'form-inline' } do |f| %>
      <input type="hidden" name="tag[id]" id="tag_id">
      <div class="modal-body">
        <label for="">标签名</label>
        <%= f.text_field :name, class: 'form-control' %>
        <p class="text-muted edit-tag-prompt hidden" style="margin: 10px 0 0 47px">编辑一个标签会改变所有含有这个标签的文章</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
        <%= f.submit '保存', class: 'btn btn-primary' %>
      </div>
      <% end -%>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div>

