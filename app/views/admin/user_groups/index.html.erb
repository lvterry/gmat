<h4>用户组</h4>
<a href="<%= new_admin_user_group_path %>" class="btn btn-primary pull-right" style="margin-top: -45px;">新建用户组</a>
<table class="table table-bordered">
  <thead>
    <th>组名</th>
    <th>权限</th>
    <th>权限有效期</th>
    <th>学生人数</th>
    <th>操作</th>
  </thead>
  <tbody>
    <% @groups.each do |g| %>
      <tr data-id="<%= g.id %>">
        <td><%= g.name %></td>
        <td><%= g.label_names %></td>
        <td>
          <% if g.valid_to.present? %>
            <%= g.valid_to.to_formatted_s(:date_and_time) %>
          <% else %>
            <span class="text-muted">长期</span>
          <% end -%>
        </td>
        <td><%= link_to g.users.count, "/admin/user_groups/#{g.id}/users" %></td>
        <td>
          <%= link_to '编辑', edit_admin_user_group_path(g) %>
          <%= link_to '删除', '#' %>
        </td>
      </tr>
    <% end -%>
  </tbody>
</table>