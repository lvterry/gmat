<h4>文章</h4>
<a href="<%= new_admin_post_path %>" class="btn btn-primary pull-right" style="margin-top: -45px;">添加文章</a>
<table class="table table-bordered">
  <thead>
    <th style="width:500px;">文章标题</th>
    <th>发布时间</th>
    <th style="width: 150px;">操作</th>
  </thead>
  <tbody>
    <% @posts.each do |p| %>
      <tr>
        <td><%= p.title %></td>
        <td style="color: #666"><%= p.created_at.to_formatted_s(:date_and_time) %></td>
        <td>
          <%= link_to '编辑', edit_admin_post_path(p) %>
          <%= link_to '删除', admin_post_path(p), class: 'delete-post' %>
        </td>
      </tr>
    <% end -%>
  </tbody>
</table>

<% content_for :scripts do %>
  <%= javascript_include_tag 'admin/posts' %>
<% end -%>